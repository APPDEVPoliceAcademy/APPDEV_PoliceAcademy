<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkshopScheduler.Views.UserAccountViews.ProfileDetailPage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Information">
                <EntryCell x:Name="NameCell" Label="Name" Text="{Binding UserName}"></EntryCell>
                <EntryCell x:Name="SurnameCell"  Label="Surname" Text="{Binding UserSurname}"></EntryCell>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="20, 0, 20, 0">
                        <Label Text="Unit" VerticalOptions="Center" HorizontalOptions="StartAndExpand"></Label>
                        <Picker x:Name="UnitPicker"/>
                         
                    </StackLayout>
                </ViewCell>
                <ViewCell>
                    <Button x:Name="ConfirmInformation" Clicked="ConfirmInformation_OnClicked"/>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>