<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkshopScheduler.Views.UserAccountViews.RegisterView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create Account" TextColor="Red" />
            <Label x:Name="Login"  Text="Login"/>
            <Entry />
            <Label Text="Password"/>
            <Entry x:Name="FirstPassword" IsPassword="True"/>
            <Label Text="Repeat Password"/>
            <Entry x:Name="RepeatPassword"  IsPassword="True"/>
            <Button x:Name="RegisterButton" Text="Register" Clicked="RegisterButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>