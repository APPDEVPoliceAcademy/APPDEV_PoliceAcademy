<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkshopScheduler.Views.ProfilePage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Information">
                <EntryCell Label="Name" Text="{Binding UserName}"></EntryCell>
                <EntryCell Label="Surname" Text="{Binding UserSurname}"></EntryCell>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="20, 0, 20, 0">
                        <Label Text="Unit" VerticalOptions="Center" HorizontalOptions="StartAndExpand"></Label>
                        <Picker SelectedItem="{Binding UserUnit}">
                            <Picker.Items>
                                <x:String>
                                    Nord
                                </x:String>
                                <x:String>
                                    Soud
                                </x:String>
                            </Picker.Items>
                        </Picker>
                    </StackLayout>
                </ViewCell>
                
                
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>