<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Padding="20" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorkshopScheduler.Views.FiltersModalView">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Sort by:">
                    <ViewCell>
                        <StackLayout>
                            <Picker x:Name="sortingPicker" PropertyChanged="SortingPicker_OnPropertyChanged" />
                            <Label x:Name="testlabel" />
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Second Section">
                    <TextCell Text="TextCell" Detail="TextCell Detail" />
                    <EntryCell Label="Entry Label" Text="EntryCell Text" />
                    <SwitchCell Text="SwitchCell Text" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>